{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "../..",
    "baseUrl": "../..",
    "paths": {
      "@core/*": ["src/core/*"],
      "@tools/*": ["src/tools/*"]
    }
  },
  "include": [
    "./**/*.ts",
    "../../src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/__tests__/**"
  ]
}